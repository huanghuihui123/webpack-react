{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "esnext",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "preserve"
    },
    "path":{
        "@/*": ["./src/*"],
        "assets/*": ["./src/assets"],
        "components/*": ["./src/components"],
        "pages/*": ["./src/pages"]
    },
    "include": [
        "src/**/*",
        "less.d.ts"
    ],
    "exclude": [
        "dist/*",
        "node_modules/*"
    ]
}